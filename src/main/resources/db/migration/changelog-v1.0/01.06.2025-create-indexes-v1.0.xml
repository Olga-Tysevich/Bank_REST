<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">
    <changeSet id="create-indexes" author="dev">
        <createIndex indexName="idx_users_username" tableName="users">
            <column name="username"/>
        </createIndex>

        <createIndex indexName="idx_card_owner_id" tableName="card">
            <column name="owner_id"/>
        </createIndex>
        <createIndex indexName="idx_card_number" tableName="card">
            <column name="number"/>
        </createIndex>

        <createIndex indexName="idx_card_status" tableName="card">
            <column name="status"/>
        </createIndex>

        <createIndex indexName="idx_transfer_from_card" tableName="transfer">
            <column name="from_card_id"/>
        </createIndex>
        <createIndex indexName="idx_transfer_to_card" tableName="transfer">
            <column name="to_card_id"/>
        </createIndex>
        <createIndex indexName="idx_transfer_created_at" tableName="transfer">
            <column name="created_at"/>
        </createIndex>

        <createIndex indexName="idx_refresh_tokens_username" tableName="refresh_tokens">
            <column name="username"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
